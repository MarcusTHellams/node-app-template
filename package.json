{
  "name": "node-app-template",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "prebuild": "rimraf build",
    "build:bundle": "node scripts/build.js",
    "prebuild:bundle": "yarn build  && node scripts/rename.js",
    "postbuild:bundle": "rimraf build1",
    "start": "ts-node src/index.ts",
    "dev": "tsc-watch --onSuccess \"ts-node src/index.ts\"",
    "dev:debug": "tsc-watch --onSuccess \"node --inspect -r ts-node/register src/index.ts\"",
    "start:prod": "node build/",
    "prestart:prod": "npm run build",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "eslint . --config .eslintrc.build.json --ext .ts,.tsx --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --watch=false --silent --coverage",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Marcus Hellams",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitest/coverage-c8": "^0.22.1",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  }
}
